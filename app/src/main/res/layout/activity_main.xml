<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kekwok.digital.deloitte.uk.com.demolitho.MainActivity">

    <Button
        android:id="@+id/recyclerview_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="RecyclerView + Viewholder" />

    <Button
        android:id="@+id/litho_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recyclerview_button"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:text="Litho TextView"/>

    <Button
        android:id="@+id/litho_list_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/litho_button"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:text="Litho List"/>

</RelativeLayout>
